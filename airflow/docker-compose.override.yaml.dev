# Local development volumes 
---
version: '3'
x-airflow-override:
  &airflow-override
  volumes:
    - ./dags:/opt/airflow/dags
    - ./logs:/opt/airflow/logs
    - ./plugins:/opt/airflow/plugins

services:
  airflow-webserver:
    <<: *airflow-override
  
  airflow-scheduler:
    <<: *airflow-override

  airflow-scheduler:
    <<: *airflow-override

  airflow-worker:
    <<: *airflow-override

  airflow-init:
    <<: *airflow-override

  flower:
    <<: *airflow-override


