# Local development volumes 
---
version: '3'
x-airflow-override:
  &airflow-override
  volumes:
    - ./dags:/opt/airflow/dags
    - ./logs:/opt/airflow/logs
    - ./plugins:/opt/airflow/plugins

services:
  airflow-webserver:
    <<: *airflow-override
  
  airflow-scheduler:
    <<: *airflow-override

  airflow-scheduler:
    <<: *airflow-override

  airflow-worker:
    <<: *airflow-override

  airflow-init:
    <<: *airflow-override

  flower:
    <<: *airflow-override

  swagger:
    image: swaggerapi/swagger-ui
    ports:
      - "8081:8080"
    expose:
      - "8081"
    environment:
      API_URL: http://localhost:3000/
